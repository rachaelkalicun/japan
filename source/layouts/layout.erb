<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "Two Weeks in Japan" %></title>
    <link href='http://fonts.googleapis.com/css?family=Simonetta' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Questrial' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  <body class="<%= page_classes %>">
    <div id="wrapper">
      <%= partial "shared/header" %>
      <div id="map" style="position: relative">
        <h3 style="position: absolute;z-index: 2; text-align: right;top:0">
          Our Journey
        </h3>
        <p style="position: absolute;z-index: 1;color: #000; width: 250px;top:30px">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Similique quo minus.</b></p>
      </div>
      <section class="page" id="wrapper">
        <article class="main" role="main">
          <%= yield %>
        </article>
        <%= partial "shared/nav" %>
        <div id="footer_push"></div>
      </section>
    </div>
    <%= partial "shared/footer" %>
  </body>
</html>